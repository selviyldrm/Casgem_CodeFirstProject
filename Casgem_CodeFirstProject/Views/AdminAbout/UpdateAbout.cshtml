@model Casgem_CodeFirstProject.DAL.Entities.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Hakkımda Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x=>x.AboutID)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.AboutTitle, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.AboutDescription, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Güncelle</button>
</form>
